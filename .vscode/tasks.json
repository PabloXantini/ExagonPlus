{
    "tasks": [
        {
            "type": "shell",
            "label": "Compilar recursos",
            "command": "windres",
            "args": [
                "${workspaceFolder}/src/resource.rc",
                "-O",
                "coff",
                "-o",
                "${workspaceFolder}/src/resource.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "dependsOn": [
                "Compilar recursos"
            ],
            "label": "C/C++: g++.exe compilar archivo activo",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "",
                "-g",
                "-std=c++17",
                "-I",
                "../include",
                "-L",
                "../lib",
                "${workspaceFolder}/src/MainFrame.cpp",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/src/resource.o",
                "-lglfw3dll",
                "-lFreeImage",
                "-o",
                "${workspaceFolder}/ExagonPlus.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Tarea generada por el depurador."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe compilar archivo activo",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ],
    "version": "2.0.0"
}